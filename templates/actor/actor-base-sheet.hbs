<form class="flexcol {{cssClass}}" autocomplete="off">

    {{!-- Sheet Header --}}
    <header class="sheet-header">
        <img class="profile-img" src="{{data.img}}" data-edit="img" title="{{data.name}}" height="100" width="100" />
        <div class="header-fields">
            <a>Name:</a>
            <h1 class="charname">
                <input name="name" type="text" value="{{data.name}}" placeholder="Name" />
            </h1>
            <div style="display: flex; flex-wrap:nowrap;  align-items:baseline;">
                <a style="float:left; vertical-align: middle;">HP:</a>
                <div class="resource">
                    <input type="number" name="system.health.value" value="{{systemData.health.value}}" />
                    <span> / </span>
                    <input type="number" name="system.health.max" value="{{systemData.health.max}}" />
                </div>
            </div>


        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="attributes">Main</a>
        <a class="item" data-tab="domain">Domain Cards</a>
        <a class="item" data-tab="items">Items</a>
        <!-- <a class="item" data-tab="description">Bio</a> -->
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Attributes and Skills Tab --}}
        <div style="float: left; width: 50%" class=" tab attributes" data-group="primary" data-tab="attributes">
            <header class="attributes-header flexrow">
                <span class="attribute-label" style="flex-basis:75%">{{localize "DAGGERHEART.AttributeLabel"}}</span>
                <!-- <span class="attribute-label"></span> This is for the circle of attributes -->
                <span class="attribute-value" style="flex-basis:20%">{{localize "DAGGERHEART.AttributeValue"}}</span>
            </header>
            {{!-- Render the attribute list partial. --}}
            {{> "systems/daggerheart/templates/parts/sheet-attributes.hbs" attributes=systemData.attributes
            dtypes=dtypes}}
        </div>

        <!-- <div style="float: left; width: 50%" class=" tab attributes" data-group="primary" data-tab="attributes">
            <header class="skills-header flexrow">
                <span class="attribute-label">{{localize "DAGGERHEART.SkillLabel"}}</span>
                <span class="attribute-value">{{localize "DAGGERHEART.SkillValue"}}</span>
            </header>

            {{!-- Render the skills list partial. --}}
            {{> "systems/daggerheart/templates/parts/sheet-skills.hbs" skills=systemData.skills test=
            context.systemData.keysTESTE
            dtypes=dtypes}}
        </div> -->

        {{!-- Biography Tab --}}
        <div class="tab description" data-group="primary" data-tab="description">
            {{editor biographyHbs target="system.biography" button=true editable=editable engine="prosemirror"}}
        </div>

        {{!-- Owned Items Tab --}}
        <div class="tab items" data-group="primary" data-tab="items">
            <ol class="item-list">
                {{#each data.items as |item id|}}
                <li class="item flexrow" data-item-id="{{item._id}}">
                    <img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
                    <h4 class="item-name">{{item.name}}</h4>
                    {{!-- Iterate through all attributes on the item and output buttons for any that are formula. --}}
                    <div class="item-buttons">
                        {{#each item.system.attributes as |itemAttr key|}}
                        {{#if itemAttr.dtype}}
                        {{#if itemAttr.isFormula}}
                        {{!-- Use the items.name.key format for shorthand. --}}
                        {{#if ../../shorthand}}
                        <button class="item-button rollable" data-roll="@items.{{slugify item.name}}.{{key}}"
                            data-label="{{ itemAttr.label }}" title="{{itemAttr.value}}">{{itemAttr.label}}</button>
                        {{!-- Use the items.name.attributes.key.value format otherwise. --}}
                        {{else}}
                        <button class="item-button rollable"
                            data-roll="@items.{{slugify item.name}}.attributes.{{key}}.value"
                            data-label="{{ itemAttr.label }}" title="{{itemAttr.value}}">{{itemAttr.label}}</button>
                        {{/if}}
                        {{/if}}
                        {{else}}
                        {{#each itemAttr as |itemGroupedAttr groupedKey|}}
                        {{#if itemGroupedAttr.isFormula}}
                        {{!-- Use the items.name.key format for shorthand. --}}
                        {{#if ../../../shorthand}}
                        <button class="item-button rollable"
                            data-roll="@items.{{slugify item.name}}.{{key}}.{{groupedKey}}"
                            data-label="{{ itemGroupedAttr.label }}"
                            title="{{itemGroupedAttr.value}}">{{itemGroupedAttr.label}}</button>
                        {{!-- Use the items.name.attributes.key.value format otherwise. --}}
                        {{else}}
                        <button class="item-button rollable"
                            data-roll="@items.{{slugify item.name}}.attributes.{{key}}.{{groupedKey}}.value"
                            data-label="{{ itemGroupedAttr.label }}"
                            title="{{itemGroupedAttr.value}}">{{itemGroupedAttr.label}}</button>
                        {{/if}}
                        {{/if}}
                        {{/each}}
                        {{/if}}
                        {{/each}}
                    </div>
                    <div class="item-controls">
                        <a class="item-control" title="{{ localize " DAGGERHEART.ItemEdit" }}" data-action="edit"><i
                                class="fas fa-edit"></i></a>
                        <a class="item-control" title="{{ localize " DAGGERHEART.ItemDelete" }}" data-action="delete"><i
                                class="fas fa-trash"></i></a>
                    </div>
                </li>
                {{/each}}
            </ol>
            <p>
                <a class="item-control" title="{{ localize " DAGGERHEART.ItemCreate" }}" data-action="create"><i
                        class="fas fa-plus"></i> {{ localize "DAGGERHEART.ItemCreate" }}</a>
            </p>
        </div>

        {{!-- Biography Tab --}}
        <div class="tab description" data-group="primary" data-tab="description">
            {{editor biographyHbs target="system.biography" button=true editable=editable engine="prosemirror"}}
        </div>
    </section>
</form>