{{#if attr}}
    {{#times attr.max}}
        {{#when @index 'gteq' ../attr.pmax}}
            <input name="{{../../key}}-{{@index}}" type="checkbox" disabled="true" />
        {{else}}
            {{#when @index 'lt' ../../attr.value}}
                <input name="{{../../key}}-{{@index}}" type="checkbox" checked/>
            {{else}}
                <input name="{{../../key}}-{{@index}}" type="checkbox"/>
            {{/when}}
        {{/when}}
    {{/times}}
{{/if}}