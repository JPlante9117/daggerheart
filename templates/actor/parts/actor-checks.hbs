{{#if attr}}
    {{#times attr.max}}
        {{#when @index 'gteq' ../attr.pmax}}
            <input name="{{../../key}}-{{@index}}" type="checkbox" disabled="true" />
        {{else}}
            {{#when @index 'gt' ../../attr.value}}
                <input name="{{../../key}}-{{@index}}" type="checkbox" checked="false"/>
            {{else}}
                <input name="{{../../key}}-{{@index}}" type="checkbox" checked="true"/>
            {{/when}}
        {{/when}}
    {{/times}}
{{/if}}